@model Modalidad

@{
    ViewBag.Title = "Áreas";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Modalidad de servicio</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Administracion", "Home")'>Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Areas")">Modalidades de servicio</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Detalle de modalidad
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6 class="font-weight-bold">@Html.DisplayFor(model => model.Nombre)</h6>
                            <p>@Html.DisplayFor(model => model.Descripcion)</p>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="font-weight-bold">Servicios</h6>
                            <div class="table-responsive">
                                <table class="table table-hover table-sm text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Servicios.FirstOrDefault().Nombre)</th>
                                        <th>@Html.DisplayNameFor(m => m.Servicios.FirstOrDefault().Descripcion)</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    @foreach (var servicio in Model.Servicios)
                                    {
                                        <tr>
                                            <td>@servicio.Nombre</td>
                                            <td>@servicio.TruncatedDescripcion</td>
                                        </tr>
                                    }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Regresar", "Modalidades", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
