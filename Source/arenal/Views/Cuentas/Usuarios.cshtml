@model IEnumerable<UsuariosIndexViewModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">@ViewData["Title"]</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administraci√≥n</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Usuarios
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @Html.ActionLink("Agregar", "AgregarUsuario", null, null, new { @class = "btn btn-sm btn-primary" })

                    <div class="table-responsive mt-3">
                        <table class="table table-hover table-sm text-nowrap">
                            <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Correo)</th>
                                <th>@Html.DisplayNameFor(m => m.Estado)</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Nombre</td>
                                    <td>@usuario.Correo</td>
                                    <td>@usuario.Estado</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                            <a class="btn btn-sm btn-outline-light text-secondary" asp-controller="Cuentas" asp-action="EditarUsuario"
                                               asp-route-id="@usuario.IdUsuario">
                                                Modificar
                                            </a>
                                            <a class="btn btn-sm btn-outline-light text-danger" asp-controller="Cuentas" asp-action="EliminarUsuario"
                                               asp-route-id="@usuario.IdUsuario">
                                                Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
