@model IEnumerable<ReporteInstructorViewModel>

@{
	ViewBag.Title = "Reporte de instructores";
}

<div class="page-breadcrumb">
	<div class="row">
		<div class="col-5 align-self-center">
			<h4 class="page-title">Reporte de instructores</h4>
		</div>
		<div class="col-7 align-self-center">
			<div class="d-flex align-items-center justify-content-end">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Administracion", "Home")">Administración</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							Instructores
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card shadow-sm">
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th>@Html.DisplayNameFor(m => m.NumeroIdentificacion)</th>
									<th>@Html.DisplayNameFor(m => m.Nombre)</th>
									<th>@Html.DisplayNameFor(m => m.Correo)</th>
									<th>@Html.DisplayNameFor(m => m.Domicilio)</th>
									<th>@Html.DisplayNameFor(m => m.FechaIngreso)</th>
									<th>@Html.DisplayNameFor(m => m.Estado)</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var instructor in Model)
								{
									<tr>
										<td>@instructor.NumeroIdentificacion</td>
										<td>@instructor.Nombre</td>
										<td>@instructor.Correo</td>
										<td>@instructor.Domicilio</td>
										<td>@instructor.FechaIngreso</td>
										<td>@instructor.Estado</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
