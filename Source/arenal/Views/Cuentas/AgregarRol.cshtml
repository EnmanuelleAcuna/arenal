@model AgregarRolViewModel

@{
    ViewData["Title"] = "Agregar rol";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">@ViewData["Title"]</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administraci√≥n</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Roles")">Roles</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Agregar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("AgregarRol", "Cuentas", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre)
                                    @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-12 col-md-8">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Descripcion)
                                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="btn-group btn-group-sm" role="group" aria-label="">
                                    <input value="Guardar" class="btn btn-sm btn-primary" type="submit"/>
                                    @Html.ActionLink("Cancelar", "Roles", null, null, new { @class = "btn btn-sm btn-outline-light text-danger" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
