ß∑@model RestablecerContrasenaViewModel

@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="row">
    <div class="col-sm-12 col-md-4 offset-md-4">
        <h4 class="text-center mt-2 mb-4 font-light">Restablecer contraseña</h4>

        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("RestablecerContrasena", "Cuentas", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Code)

                    <div class="form-group">
                        @Html.LabelFor(m => m.CorreoElectronico, new { @class = "font-bold" })
                        @Html.EditorFor(m => m.CorreoElectronico, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Contrasena, new { @class = "font-bold" })
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmarContrasena, new { @class = "font-bold" })
                        @Html.PasswordFor(m => m.ConfirmarContrasena, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(m => m.ConfirmarContrasena, "", new { @class = "text-danger" })
                    </div>

                    <div class="center red-text font-bold">
                        @Html.ValidationSummary(true, "", new { @class = "data-error" })
                    </div>

                    <div class="w-100 text-center">
                        <button type="submit" value="Restablecer contraseña" class="btn btn-sm btn-primary btn-block font-bold mb-2">
                            Cambiar contraseña
                        </button>

                        <small>
                            @Html.ActionLink("Iniciar sesión", "IniciarSesion", "Cuentas", null, new
                            {
                                @class = "text-secondary ", title = "Iniciar sesión"
                            })
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
