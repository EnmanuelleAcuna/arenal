@model IEnumerable<Proyecto>

@{
    ViewBag.Title = "Proyectos";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Proyectos</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Proyectos
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <a asp-action="AgregarProyecto" class="btn btn-sm btn-secondary">Agregar proyecto</a>

                    <hr/>

                    <div class="table-responsive">
                        <table class="table table-hover table-sm text-nowrap">
                            <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>Inicio</th>
                                <th>Finalización</th>
                                <th>Área</th>
                                <th>Cliente</th>
                                <th>Contrato</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@item.FechaFin?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Area.Nombre</td>
                                    <td>@item.Contrato.Cliente.Nombre</td>
                                    <td>@item.Contrato.Identificacion</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                            <a class="btn btn-sm btn-light" asp-controller="Clientes" asp-action="EditarProyecto" asp-route-id="@item.Id">
                                                Modificar
                                            </a>
                                            <a class="btn btn-sm btn-light text-danger" asp-controller="Clientes" asp-action="EliminarProyecto" asp-route-id="@item.Id">
                                                Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
		
	</script>
}
