@model Sesion

@{
    ViewBag.Title = "Sesiones";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Sesión</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Administracion", "Home")'>Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Sesiones")">Sesiones</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Detalle de sesión
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p>Fecha de inicio:&nbsp;<b>@Html.DisplayFor(model => model.Fecha)</b></p>
                            <p>@Html.DisplayFor(model => model.Descripcion)</p>
                        </div>

                        <div class="col-sm-12">
                            <p>Servicio:&nbsp;<b>@Html.DisplayFor(model => model.Servicio.Nombre)</b></p>
                            <p>Cliente:&nbsp;<b>@Html.DisplayFor(model => model.Proyecto.Contrato.Cliente.Nombre)</b></p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Regresar", "Sesiones", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
