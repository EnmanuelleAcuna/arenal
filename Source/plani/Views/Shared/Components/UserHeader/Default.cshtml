@model plani.Models.ViewModels.UserHeaderViewModel

<div class="topbar-right">
    @if (Model.IsAuthenticated)
    {
        <div class="user-menu">
            <div class="user-avatar">@Model.UserInitials</div>
            <div>
                <div class="user-name">@Model.UserName</div>
                <div class="user-role">@Model.DisplayRole</div>
            </div>
        </div>
        <form asp-controller="Cuentas"
              asp-action="CerrarSesion"
              asp-route-returnUrl="@Url.Action("Administracion", "Home")"
              class="m-0">
            <button type="submit" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Salir
            </button>
        </form>
    }
    else
    {
        <a class="btn-logout text-decoration-none"
           asp-controller="Cuentas"
           asp-action="IniciarSesion">
            <i class="fas fa-sign-in-alt"></i> Iniciar sesi√≥n
        </a>
    }
</div>
