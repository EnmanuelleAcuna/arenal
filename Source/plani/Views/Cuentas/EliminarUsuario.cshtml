@model EditarUsuarioViewModel

@{
    ViewBag.Title = "Usuarios";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Eliminar usuario</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Usuarios")">Usuarios</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Eliminar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("EliminarUsuario", "Cuentas", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdUsuario)

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <h6>
                                    ¿Seguro que desea eliminar el usuario
                                    <b>
                                        @Html.DisplayFor(model =>
                                            model.NombreCompleto)
                                    </b>?
                                </h6>
                            </div>


                            <div class="col-12 mt-2">
                                <div class="btn-group btn-group-sm" role="group" aria-label="">
                                    <input value="Eliminar" class="btn btn-sm btn-outline-light text-danger" type="submit"/>
                                    @Html.ActionLink("Cancelar", "Usuarios", null, null, new { @class = "btn btn-sm btn-outline-light text-secondary" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
