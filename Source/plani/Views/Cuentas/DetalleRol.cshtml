@model DetalleRolViewModel

@{
    ViewBag.Title = "Detalle de rol";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Rol</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Administracion", "Home")'>Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Roles")">Roles</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Detalle
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6 class="font-weight-bold">@Html.DisplayFor(model => model.Nombre)</h6>
                            <p>@Html.DisplayFor(model => model.Descripcion)</p>
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            @* <h6 class="font-weight-bold">Usuarios</h6> *@
                            <div class="table-responsive">
                                <table class="table table-hover table-sm text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>Usuario</th>
                                        <th>Correo electrónico</th>
                                    </tr>
                                    </thead>

                                    <tbody>

                                    @foreach (ApplicationUser usuario in Model.Usuarios)
                                    {
                                        <tr>
                                            <td>@usuario.FullName</td>
                                            <td>@usuario.Email.ToLower()</td>
                                        </tr>
                                    }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Regresar", "Roles", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
