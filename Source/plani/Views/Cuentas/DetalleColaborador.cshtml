@model ApplicationUser

@{
    ViewBag.Title = "Colaboradores";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Colaborador</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Administracion", "Home")'>Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Colaboradores")">Colaboradores</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Detalle de colaborador
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6 class="font-weight-bold">@Html.DisplayFor(model => model.FullName)</h6>
                            <p>@Html.DisplayFor(model => model.IdentificationNumber) - @Html.DisplayFor(model => model.Email)</p>
                        </div>
                    </div>

                    <div class="row my-4">
                        <div class="col-12">
                            <h6 class="font-weight-bold">Proyectos</h6>
                            <div class="table-responsive">
                                <table class="table table-hover table-sm text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>Proyecto</th>
                                        <th>Cliente</th>
                                        <th>@Html.DisplayNameFor(m => m.Asignaciones.FirstOrDefault().HorasEstimadas)</th>
                                        <th>@Html.DisplayNameFor(m => m.Asignaciones.FirstOrDefault().Descripcion)</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    @foreach (var asignacion in Model.Asignaciones)
                                    {
                                        <tr>
                                            <td>@asignacion.Proyecto.Nombre</td>
                                            <td>@asignacion.Proyecto.Contrato.Cliente.Nombre</td>
                                            <td>@asignacion.HorasEstimadas</td>
                                            <td>@asignacion.Descripcion</td>
                                            <td class="text-right">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                                    <a class="btn btn-sm btn-light text-danger" asp-controller="Clientes" asp-action="EliminarAsignacion" asp-route-id="@asignacion.Id">
                                                        Eliminar
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Regresar", "Colaboradores", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
