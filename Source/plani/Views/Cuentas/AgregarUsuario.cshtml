@model AgregarUsuarioViewModel

@{
    ViewData["Title"] = "Agregar";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">
                <span class="font-weight-bold">
                    @ViewData["Title"]
                </span>
            </h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Usuarios")">Usuarios</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Agregar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("AgregarUsuario", "Cuentas", null, FormMethod.Post, true, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre)
                                    @Html.TextBoxFor(model => model.Nombre, "", new { @class = "form-control form-control-sm", placeholder = "Digite el nombre" })
                                    @Html.ValidationMessageFor(model => model.Nombre)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PrimerApellido)
                                    @Html.TextBoxFor(model => model.PrimerApellido, "", new { @class = "form-control form-control-sm", placeholder = "Digite el primer apellido" })
                                    @Html.ValidationMessageFor(model => model.PrimerApellido)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SegundoApellido)
                                    @Html.TextBoxFor(model => model.SegundoApellido, "", new { @class = "form-control form-control-sm", placeholder = "Digite el segundo apellido" })
                                    @Html.ValidationMessageFor(model => model.SegundoApellido)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NumeroIdentificacion)
                                    @Html.TextBoxFor(model => model.NumeroIdentificacion, "", new { @class = "form-control form-control-sm", placeholder = "Digite el número de identificación" })
                                    @Html.ValidationMessageFor(model => model.NumeroIdentificacion)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CorreoElectronico)
                                    @Html.TextBoxFor(model => model.CorreoElectronico, "", new { @class = "form-control form-control-sm", placeholder = "Digite el correo electrónico" })
                                    @Html.ValidationMessageFor(model => model.CorreoElectronico)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Contrasena)
                                    @Html.PasswordFor(model => model.Contrasena, new { @class = "form-control form-control-sm", placeholder = "Digite la contraseña" })
                                    @Html.ValidationMessageFor(model => model.Contrasena)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ConfirmarContrasena)
                                    @Html.PasswordFor(model => model.ConfirmarContrasena, new { @class = "form-control form-control-sm", placeholder = "Confirmar contraseña" })
                                    @Html.ValidationMessageFor(model => model.ConfirmarContrasena)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Estado)
                                        <br/>
                                        @Html.EditorFor(model => model.Estado, "", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <span class="font-weight-bold">Roles</span>
                            </div>
                            <div class="col-sm-12 mt-2">
                                <div class="row">
                                    @foreach (var rol in ViewBag.ListaRoles)
                                    {
                                        <div class="col-sm-12 col-md-3 d-inline">
                                            <div class="row">
                                                <div class="col-1 d-inline">
                                                    <input type="checkbox" id="R_@rol.Text" name="R_@rol.Text" value="@rol.Text"/>
                                                </div>
                                                <div class="clearfix"></div>
                                                <div class="col-10">
                                                    <label for="R_@rol.Text">@rol.Text</label>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                    <input value="Guardar" class="btn btn-sm btn-primary" type="submit"/>
                                    @Html.ActionLink("Cancelar", "Usuarios", null, null, new { @class = "btn btn-sm btn-outline-dark" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
