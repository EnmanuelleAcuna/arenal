@model SesionesIndexViewModel

@{
    ViewData["Title"] = "Sesiones";
    ViewBag.BreadcrumbIcon = "fa-clock";
    ViewBag.Breadcrumbs = new[] { "Todas las sesiones" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("Sesiones", "Clientes", FormMethod.Get, new { autocomplete = "off" }))
                    {

                        <div class="row">
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdUsuario)
                                    @Html.DropDownListFor(model => model.IdUsuario, new List<SelectListItem>(ViewBag.Colaboradores), "Todos", new { @class = "form-control form-control-sm" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-8 col-lg-8">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.IdProyecto)
                                    @Html.DropDownListFor(model => model.IdProyecto, new List<SelectListItem>(ViewBag.Proyectos), "Todos", new { @class = "form-control form-control-sm" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-3 col-lg-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaInicio, "Inicio")
                                    @Html.TextBoxFor(model => model.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-sm", type = "date" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-3 col-lg-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FechaFin, "Fin")
                                    @Html.TextBoxFor(model => model.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-sm", type = "date" })
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-6">
                                <span class="d-block d-sm-none d-md-block">
                                    <label>&nbsp;</label>
                                </span>
                                <input value="Filtrar" class="btn btn-sm btn-primary" type="submit"/>
                                <a href="@Url.Action("ExportarSesiones", "Clientes", new { idUsuario = Model.IdUsuario, idProyecto = Model.IdProyecto, fechaInicio = Model.FechaInicio?.ToString("yyyy-MM-dd"), fechaFin = Model.FechaFin?.ToString("yyyy-MM-dd") })" class="btn btn-sm btn-success">
                                    <i class="fas fa-file-excel"></i> Exportar
                                </a>
                            </div>
                        </div>
                    }

                    <hr/>

                    @* Badge con resumen de sesiones *@
                    @{
                        var totalSesiones = Model.TotalSesiones;
                        var horasTotalesCalculadas = Model.TotalHoras;
                        var mesActual = Model.FechaInicio?.ToString("MMMM yyyy", new System.Globalization.CultureInfo("es-ES"));
                    }

                    @if (totalSesiones > 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i>
                            <strong>Mostrando:</strong>
                            @if (!string.IsNullOrEmpty(mesActual))
                            {
                                <span>@mesActual</span>
                                <span class="mx-2">|</span>
                            }
                            <span>@totalSesiones sesiones</span>
                            <span class="mx-2">|</span>
                            <span>@horasTotalesCalculadas.ToString("F1") horas trabajadas</span>
                        </div>
                    }

                    @if (Model.Sesiones == null || Model.Sesiones.Count == 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            No hay sesiones registradas.
                        </div>
                    }

                    @*@foreach (var proyecto in Model.ProyectosSesiones)
                    {
                        <div class="card mb-4">
                            <div class="card-header p-0-5">
                                <h6 class="mb-0"><span class="text-sc">@proyecto.NombreCliente</span> | @proyecto.NombreProyecto</h6>
                            </div>
                            <div class="card-body pl-4 py-2">
                                @foreach (var sesion in proyecto.Sesiones)
                                {
                                    <p class="mb-0">
                                        @sesion.FechaInicio.ToString("dd-MM-yyyy") | <span class="font-weight-bold">@sesion.ApplicationUser.FullName</span> | @sesion.Horas hora(s) @sesion.Minutes <minutos class=""></minutos> | @sesion.TruncatedDescripcion <a asp-action="DetalleSesion" asp-controller="Clientes" asp-route-id="@sesion.Id">Ver detalle</a>
                                    </p>
                                }
                            </div>
                        </div>
                    }*@
                    <div class="table-responsive">
                        <table id="tablaSesiones" class="table table-hover table-sm text-nowrap">
                            <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Colaborador</th>
                                <th>Cliente</th>
                                <th>Proyecto</th>
                                <th>Horas</th>
                                <th>Minutos</th>
                                <th>Detalle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model.Sesiones != null)
                            {
                                @foreach (var sesion in Model.Sesiones)
                                {
                                    <tr>
                                        <td>@sesion.FechaInicio.ToString("dd-MM-yyyy")</td>
                                        <td>@sesion.ApplicationUser.FullName</td>
                                        <td>@sesion.Proyecto.Contrato.Cliente.Nombre</td>
                                        <td>@sesion.Proyecto.Nombre</td>
                                        <td>@sesion.Horas</td>
                                        <td>@sesion.Minutes</td>
                                        <td>@sesion.Descripcion</td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tablaSesiones').DataTable({
                "order": [[0, 'desc']],
                "language": {
                    "url": "/dataTables_es-ES.json"
                }
            });
        });
    </script>
}