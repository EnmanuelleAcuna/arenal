@model DetalleProyectoViewModel

@{
    ViewData["Title"] = "Proyectos";
    ViewBag.BreadcrumbIcon = "fa-project-diagram";
    ViewBag.Breadcrumbs = new[] { "Proyectos", "Detalle" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6>Proyecto: <span class="font-weight-bold">@Model.Nombre</span></h6>
                            <p>@Model.Descripcion</p>
                        </div>

                        <div class="col-sm-12">
                            <p>Área: <b>@Model.Area.Nombre</b></p>
                            <p>Cliente: <b>@Model.Contrato.Cliente.Nombre</b></p>
                            <p>Contrato: <b>@Model.Contrato.Identificacion</b></p>
                            <p>Fecha de inicio: <b>@Model.FechaInicioFormateada</b></p>
                            <p>Fecha de finalización: <b>@Model.FechaFinFormateada</b></p>
                            <p>Horas estimadas: <b>@(Model.HorasEstimadas?.ToString() ?? "No definidas")</b></p>
                            <p>Responsable: <b>@(Model.Responsable?.FullName ?? "No asignado")</b></p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Proyectos", "Proyectos", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>