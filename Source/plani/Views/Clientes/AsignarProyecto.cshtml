@model AgregarAsignacionModel

@{
    ViewData["Title"] = "Asignar proyecto";
    ViewBag.BreadcrumbIcon = "fa-tasks";
    ViewBag.Breadcrumbs = new[] { "Asignaciones", "Asignar proyecto" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("AsignarProyecto", "Clientes", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.IdUsuario)

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <h5 class="alert-heading">
                                    <i class="fas fa-exclamation-triangle"></i> Error
                                </h5>
                                <div class="validation-summary-errors mb-0">
                                    @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                                </div>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        
                        <div class="row">
                            <div class="col-md-12">
                                <p>Asignar un proyecto al colaborador <b>@Html.DisplayFor(model => model.NombreColaborador)</b></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-10">
                                <div class="form-group">
                                    <label>Proyecto</label>
                                    @Html.DropDownListFor(model => model.IdProyecto, new List<SelectListItem>(ViewBag.Proyectos), "", new { @class = "form-control form-control-sm", id = "proyecto-select" })
                                    @Html.ValidationMessageFor(model => model.IdProyecto)
                                </div>
                            </div>
                            
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="HorasEstimadas">Horas estimadas</label>
                                    @Html.TextBoxFor(model => model.HorasEstimadas, "", new { @class = "form-control form-control-sm", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.HorasEstimadas, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Descripcion)
                                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12">
                                <input value="Guardar" class="btn btn-sm btn-primary" type="submit"/>
                                @Html.ActionLink("Cancelar", "Colaboradores", "Cuentas", null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function() {
            initSelect2('#proyecto-select', 'Seleccione proyecto');
        });
    </script>
}