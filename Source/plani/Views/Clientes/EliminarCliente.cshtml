@model Cliente

@{
    ViewBag.Title = "Eliminar cliente";
}

<div class="container">
    <div class="row">
        <div class="col-5 align-self-center">
            <h6 class="page-title">Eliminar cliente</h6>
        </div>
        <div class="col-7 align-self-center">
            <div class="d-flex align-items-center justify-content-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Administracion", "Home")">Administración</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Clientes")">Clientes</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Eliminar
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("EliminarCliente", "Clientes", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Nombre)

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <h6>
                                    ¿Seguro que desea eliminar el cliente <b>@Html.DisplayFor(model => model.Nombre)</b>?
                                </h6>
                            </div>

                            <div class="col-12">
                                <input value="Eliminar" class="btn btn-sm btn-danger" type="submit"/>
                                @Html.ActionLink("Regresar", "Clientes", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
