@model EliminarClienteViewModel

@{
    ViewData["Title"] = "Eliminar cliente";
    ViewBag.BreadcrumbIcon = "fa-building";
    ViewBag.Breadcrumbs = new[] { "Clientes", "Eliminar" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("EliminarCliente", "Clientes", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Nombre)

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <h6>
                                    Â¿Seguro que desea eliminar el cliente <b>@Html.DisplayFor(model => model.Nombre)</b>?
                                </h6>
                            </div>

                            <div class="col-12">
                                <input value="Eliminar" class="btn btn-sm btn-danger" type="submit"/>
                                @Html.ActionLink("Cancelar", "Clientes", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
