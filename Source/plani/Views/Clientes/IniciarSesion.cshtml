@model AgregarSesionModel

@{
    ViewData["Title"] = "Iniciar sesión";
    ViewBag.BreadcrumbIcon = "fa-clock";
    ViewBag.Breadcrumbs = new[] { "Sesiones", "Iniciar" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("IniciarSesion", "Clientes", FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @* @Html.HiddenFor(model => model.IdUsuario) *@

                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationSummary(true, "")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-5">
                                <div class="form-group">
                                    <label>Proyecto</label>
                                    @Html.DropDownListFor(model => model.IdProyecto, new List<SelectListItem>(ViewBag.Proyectos), "", new { @class = "form-control form-control-sm", id = "proyecto-select" })
                                    @Html.ValidationMessageFor(model => model.IdProyecto)
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-4">
                                <div class="form-group">
                                    <label>Servicio</label>
                                    @Html.DropDownListFor(model => model.IdServicio, new List<SelectListItem>(ViewBag.Servicios), "", new { @class = "form-control form-control-sm", id = "servicio-select" })
                                    @Html.ValidationMessageFor(model => model.IdServicio)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Descripcion)
                                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-12">
                                <input value="Iniciar" class="btn btn-sm btn-primary" type="submit"/>
                                @Html.ActionLink("Cancelar", "MisSesiones", null, null, new { @class = "btn btn-sm btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function() {
            initSelect2('#proyecto-select', 'Seleccione proyecto');
            initSelect2('#servicio-select', 'Seleccione servicio');
        });
    </script>
}
