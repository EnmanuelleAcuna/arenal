@model Cliente

@{
    ViewData["Title"] = "Clientes";
    ViewBag.BreadcrumbIcon = "fa-building";
    ViewBag.Breadcrumbs = new[] { "Clientes", "Detalle" };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6>Cliente: <span class="font-weight-bold">@Model.Identificacion - @Model.Nombre</span></h6>
                            <p>@Model.Descripcion</p>
                        </div>

                        <div class="col-sm-12">
                            <p>Tipo de cliente: <b>@Model.TipoCliente.Nombre</b></p>
                            <p>Dirección: <b>@Model.Direccion</b></p>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="text-dark">Proyectos del Cliente</h6>
                            <div class="table-responsive">
                                <table class="table table-hover table-sm text-nowrap">
                                    <thead>
                                    <tr>
                                        <th class="text-secondary">Nombre</th>
                                        <th class="text-secondary">Área</th>
                                    </tr>
                                    </thead>

                                    <tbody>

                                    @foreach (var proyecto in Model.Contratos.FirstOrDefault().Proyectos)
                                    {
                                        <tr>
                                            <td>@proyecto.Nombre</td>
                                            <td>@proyecto.Area.Nombre</td>
                                        </tr>
                                    }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            @Html.ActionLink("Regresar", "Clientes", null, null, new { @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
